@model AspnetNote.MVC6.Models.User

<h2>Register</h2>

<form class="form-horizontal" method="post" asp-controller="Account" asp-action="Register">
    <div class="form-group">
        <label>User ID</label>
        <input type="text" class="form-control w-25" asp-for="UserId" placeholder="please input User ID" />
        <span class="text-danger" asp-validation-for="UserId"></span>
    </div>
    <div class="form-group">
        <label>User Password</label>
        <input type="password" class="form-control w-25" asp-for="UserPassword" placeholder="input Password" />
        <span class="text-danger" asp-validation-for="UserPassword"></span>
    </div>
    <div class="form-group">
        <label>User Name</label>
        <input type="text" class="form-control w-50" asp-for="UserName" placeholder="input User Name" />
        <span class="text-danger" asp-validation-for="UserName"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-outline-primary"> Register</button>
        <a class="btn btn-outline-warning" href="#">Cancel</a>
    </div>
</form>